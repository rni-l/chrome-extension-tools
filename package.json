{
  "name": "chrome-extension-tools",
  "type": "module",
  "version": "0.0.3",
  "packageManager": "pnpm@9.15.3",
  "author": "rni-l",
  "license": "MIT",
  "homepage": "https://github.com/rni-l/chrome-extension-tools#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rni-l/chrome-extension-tools.git"
  },
  "bugs": {
    "url": "https://github.com/rni-l/chrome-extension-tools/issues"
  },
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/main.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "clear": "rimraf --glob extension/dist extension/manifest.json extension.*",
    "build:lib": "vite build --config vite.config.ts && npm run tsc",
    "build:web": "vite build --config vite.config.dev.mts",
    "build:prepare": "esno scripts/prepare.ts",
    "build": "cross-env NODE_ENV=production run-s clear build:web build:prepare build:background build:js",
    "build:background": "vite build --config vite.config.background.mts",
    "build:js": "vite build --config vite.config.content.mts",
    "dev": "npm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:background": "npm run build:background -- --mode development",
    "dev:web": "vite --config vite.config.dev.mts",
    "dev:js": "npm run build:js -- --mode development",
    "lint": "eslint .",
    "typecheck": "vue-tsc",
    "preview": "vite preview",
    "test": "vitest --config vite.config.ts",
    "up": "taze major -I",
    "postinstall": "npx simple-git-hooks",
    "tsc": "tsc --project tsconfig.build.json"
  },
  "dependencies": {
    "dayjs": "^1.11.13"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.13.0",
    "@iconify-json/carbon": "^1.2.5",
    "@types/chrome": "^0.0.299",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.10.5",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitest/ui": "2.1.8",
    "@vue-macros/volar": "^0.30.10",
    "@vue/test-utils": "^2.4.6",
    "@vueuse/core": "^12.4.0",
    "chokidar": "^4.0.3",
    "cross-env": "^7.0.3",
    "crx": "^5.0.1",
    "eslint": "^9.18.0",
    "eslint-plugin-format": "^1.0.1",
    "esno": "^4.8.0",
    "fs-extra": "^11.3.0",
    "jsdom": "^26.0.0",
    "kolorist": "^1.8.0",
    "lint-staged": "^15.3.0",
    "lodash-es": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "pnpm": "^9.15.3",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.11.1",
    "taze": "^18.1.0",
    "typescript": "^5.7.3",
    "unocss": "^65.4.3",
    "unplugin-auto-import": "^19.0.0",
    "unplugin-icons": "^22.0.0",
    "unplugin-vue-components": "^28.0.0",
    "unplugin-vue-macros": "^2.13.8",
    "unplugin-vue-router": "^0.10.9",
    "vite": "^6.0.7",
    "vitest": "^2.1.8",
    "vue": "^3.5.13",
    "vue-demi": "^0.14.10",
    "vue-tsc": "^2.2.0",
    "webext-bridge": "^6.0.1",
    "webextension-polyfill": "^0.12.0"
  },
  "resolutions": {
    "unplugin": "^2.1.2",
    "vite": "^6.0.7"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
